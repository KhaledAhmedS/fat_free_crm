- model = "FatFreeCrm::#{controller.controller_name.classify}".constantize
- sort_by_menu_items = model.sort_by_fields.map { |field| options_menu_item(:sort_by, field) }
- current_sort_by = t("option_" + model.sort_by_map.invert[@sort_by])

%div{ style: "margin: 0px 0px 6px 0px" }
  = text_field_tag('query', @current_query, size: 32, autofocus: true, placeholder: "Search #{controller_name}")
  %span.sorting_options
    = t(:sort_by, field: link_to(h(current_sort_by), "#", id: :sort_by)).html_safe

#search
  .tabs
    %ul
      %li
        = link_to t('all'), '#', :"data-search-form-filter" => "all", class: "tablinks #{(params[:filter_by] == "all"  ? "" : " active")}", :onclick => "changeTap(event, 'all')"
      %li
        = link_to t('status'), '#', :"data-search-form-filter" => "status", class: "tablinks #{(params[:filter_by] == "status"  ? "" : " active")}", :onclick => "changeTap(event, 'status')"
      %li
        = link_to t('rating'), '#', :"data-search-form-filter" => "rating", class: "tablinks #{(params[:filter_by] == "rating" ? "" : " active")}", :onclick => "changeTap(event, 'rating')"
      %li
        = link_to t('source'), '#', :"data-search-form-filter" => "source", class: "tablinks #{(params[:filter_by] == "source" ? "" : " active")}", :onclick => "changeTap(event, 'source')"
  #status.tabcontent{:style => "background-color: #eee; padding: 10px"}
    = render "status_lead_search"
  #rating.tabcontent{:style => "background-color: #eee; padding: 10px"}
    = render "rating_lead_search"
  #rating.tabcontent{:style => "background-color: #eee; padding: 10px"}
    = render "source_lead_search"

.search_form_filter#status.tabcontent{:style => "background-color: #eee; padding: 10px"}
  = render "status_lead_search"
.search_form_filter#rating.tabcontent{:style => "background-color: #eee; padding: 10px"}
  = render "rating_lead_search"
.search_form_filter#source.tabcontent{:style => "background-color: #eee; padding: 10px"}
  = render "source_lead_search"

:javascript
  var searchTimeout;

  $('#query').on('keydown', function(event) {
    $el = $(event.target)
    console.log("lplplppl")
    if (searchTimeout) clearTimeout(searchTimeout);
    searchTimeout = setTimeout(function () { crm.search($el.val(), '#{controller_name}'); }, 500);
  });

  new crm.Menu({
    trigger   : "#sort_by",
    fade      : 500,
    appear    : 500,
    menu_items: [ #{raw sort_by_menu_items.join(",")} ]
  });

  function changeTap(evt, tapName) {
    var i, tabcontent, tablinks;
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }
    document.getElementById(tapName).style.display = "block";
    evt.currentTarget.className += " active";
  }
