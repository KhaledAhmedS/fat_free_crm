<%# - model_name = controller_name.singularize
- model_klass = "FatFreeCrm::#{model_name.camelcase}".constantize

.title_tools
  #buttons
    = view_buttons
  .create_asset
    = link_to_inline("create_#{model_name}".to_sym, send("new_#{model_name}_path"), {text: t("create_#{model_name}".to_sym), class: 'btn-sm btn-primary'})
    = link_to_inline("import_#{model_name}".to_sym, send("import_#{model_name}s_path"), {text: t("import_#{model_name}s".to_sym), class: 'btn-sm btn-primary'})

.title
  %span{id: "create_#{model_name}_title"} #{t controller_name.to_sym}
  = image_tag("fat_free_crm/loading.gif", size: :thumb, id: "loading", style: "display: none;") %>

<% model_name = controller_name.singularize %>
<% model_klass = "FatFreeCrm::#{model_name.camelcase}".constantize %>

<div class="title_tools">
  <div id="buttons">
    <%= view_buttons %>
  </div>
  <div class="create_asset">
    <%= link_to_inline("create_#{model_name}".to_sym, send("new_#{model_name}_path"), {text: t("create_#{model_name}".to_sym), class: 'btn-sm btn-primary'}) %>
  </div>
</div>
<div class="title">
  <span id="create_<%= model_name %>_title"><%= t controller_name.to_sym %></span>
  <%= image_tag("fat_free_crm/loading.gif", size: :thumb, id: "loading", style: "display: none;") %>
</div>
