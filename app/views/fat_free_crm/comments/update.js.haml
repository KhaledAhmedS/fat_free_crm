- id = dom_id(@comment, 'fat_free_crm')

- if @comment.errors.empty?
  $('##{id}').replaceWith('#{ j render(partial: "comment", collection: [ @comment ]) }');
  $('##{id}').effect("highlight", { duration:1500 });
- else
  $('##{id}').html('#{ j render(partial: "edit") }');
  $('#comment_comment').focus();
